

 <h1>Books</h1>
 <body>
<table>
<th class="title">
    Title
</th>

<th class="title">
    Body
</th>

<th colspan="3"></th>

<tr class="list">
 <% if @books.present? %>
 <% @books.each do |book| %>

 

      <tr><td><%= book.title %></td><td><%= book.body %></td>
  
      <td>
      
      <%= link_to "Show", book_path(book) %>
      <%= link_to "Edit", edit_book_path(book) %>
      <%= link_to "Destroy", destroy_book_path(book), method: :delete %>
      </td>
      </tr>
<% end %>
<% end %>
 
</table>


  <h2>New book</h2>
  
  <div class="form">

  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
</div>
</body>



